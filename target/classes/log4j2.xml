<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Properties>
        <Property name="LOG_PATTERN">%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Property>
        <Property name="LOG_PATTERN_COLOR">%highlight{%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n}{FATAL=red blink, ERROR=red, WARN=yellow bold, INFO=green, DEBUG=green bold, TRACE=blue}</Property>
    </Properties>

    <Appenders>
        <!-- Console Appender -->
        <Console name="ConsoleAppender" target="SYSTEM_OUT" follow="true">
            <PatternLayout pattern="${LOG_PATTERN_COLOR}"/>
        </Console>

        <!-- File Appender for all logs -->
        <File name="FileAppender" fileName="reports/application.log">
            <PatternLayout pattern="${LOG_PATTERN}"/>
        </File>

        <!-- Rolling File Appender for daily logs -->
        <RollingFile name="RollingFileAppender" 
                     fileName="reports/selenium-test.log"
                     filePattern="reports/selenium-test-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="10MB"/>
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>

        <!-- Async Appender for better performance -->
        <Async name="AsyncAppender">
            <AppenderRef ref="FileAppender"/>
            <AppenderRef ref="RollingFileAppender"/>
        </Async>
    </Appenders>

    <Loggers>
        <!-- Selenium WebDriver logging -->
        <Logger name="org.openqa.selenium" level="INFO" additivity="false">
            <AppenderRef ref="AsyncAppender"/>
        </Logger>

        <!-- TestNG logging -->
        <Logger name="org.testng" level="INFO" additivity="false">
            <AppenderRef ref="AsyncAppender"/>
        </Logger>

        <!-- Our application logging -->
        <Logger name="core" level="DEBUG" additivity="false">
            <AppenderRef ref="ConsoleAppender"/>
            <AppenderRef ref="AsyncAppender"/>
        </Logger>

        <Logger name="pages" level="DEBUG" additivity="false">
            <AppenderRef ref="ConsoleAppender"/>
            <AppenderRef ref="AsyncAppender"/>
        </Logger>

        <Logger name="tests" level="DEBUG" additivity="false">
            <AppenderRef ref="ConsoleAppender"/>
            <AppenderRef ref="AsyncAppender"/>
        </Logger>

        <!-- Root logger -->
        <Root level="INFO">
            <AppenderRef ref="ConsoleAppender"/>
            <AppenderRef ref="AsyncAppender"/>
        </Root>
    </Loggers>
</Configuration>